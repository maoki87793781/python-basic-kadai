        "# 上底、下底、高さの値を変数に代入する\n",
        "upper_base = 10\n",
        "lower_base = 20\n",
        "height = 5\n",
        "\n",
        "# 台形の面積を計算する\n",
        "area = (upper_base + lower_base) * height / 2\n",
        "\n",
        "# 計算結果を出力する\n",
        "print(str(area) + \"cm²\")"
